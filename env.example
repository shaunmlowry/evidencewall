# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=evidencewall
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=evidencewall
DATABASE_URL=postgres://evidencewall:${POSTGRES_PASSWORD}@localhost:5432/evidencewall?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRY=24h

# OAuth2 Configuration (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost/api/auth/google/callback

# Service Configuration (Internal ports - not exposed publicly)
AUTH_SERVICE_PORT=8001
BOARDS_SERVICE_PORT=8002
REALTIME_SERVICE_PORT=8003

# CORS Configuration (for production with nginx proxy)
CORS_ORIGINS=http://localhost,https://localhost

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# Frontend Configuration (using nginx proxy paths)
REACT_APP_API_BASE_URL=/api/auth
REACT_APP_BOARDS_API_URL=/api/boards
REACT_APP_WEBSOCKET_URL=/api/realtime
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id


